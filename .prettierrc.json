{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "plugins": ["prettier-plugin-solidity"],
        "printWidth": 99,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "plugins": ["@trivago/prettier-plugin-sort-imports"],
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": false,
        "importOrder": [
          "^@nomicfoundation/(.*)$",
          "^@solarity/(.*)$",
          "^@typechain/(.*)$",
          "^hardhat-[a-zA-Z0-9_\\-]+$",
          "^tsconfig-paths/register$",
          "^solidity-[a-zA-Z0-9_\\-]+$",
          "^hardhat/config$",
          "^dotenv$",
          "^[a-zA-Z0-9_\\-]+$",
          "^\\u0000",
          "^\\.\\./",
          "^\\./"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    }
  ]
}
